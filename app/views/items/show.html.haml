        %input{:name => "like_del_url", :type => "hidden", :value => "https://www.mercari.com/jp/like/delete/m38799137224/?_s=U2FsdGVkX18e5ceg1R5dtdpcyL4dl3fTQ3VyiDPP1VTsNGZOOKOjezT7pI0SlQq35ya2DM-tS4gaYEP37AF7PBYxE-0DRzNdNTzFiHigtOcDxd2zhem7cNLrftEaYEw6"}/
        %input{:name => "__csrf_value", :type => "hidden", :value => "b66f76f0af6533a7ef8ffd1e819cd400923f651ad5edd7640b653da1b612bbbe5f9e0cf00d1fc4ec682f3ad5a5480b2f7b7e98409d8a3023f092f7096722b7c00"}/
      .item-button-right
        = link_to 'https://www.mercari.com/jp/safe/description/', target: '_blank' do
          %i.icon-lock
          %span あんしん・あんぜんへの取り組み

