#wrapper

  .header-email-registration
    .header-email-registration__logo
      = link_to '' do 
        = image_tag 'logo.svg', class: 'registration-header-logo'
    .progress-bar
      %ul
        %li
          会員情報
          .progress-status__done.red
        %li
          電話番号認証
          .progress-status.red
        %li
          お届け先住所入力
          .progress-status.red
        %li.active
          支払い方法
          .progress-status.red
        %li
          完了
          .progress-status

  -# 支払い方法フォーム
  = form_with local: true, url: "/signup", method: :post, html: {name: "inputForm", class: 'forth-main-wrapper__box', id: 'charge-form'} do |f|
    .user-input
      .user-input__message
        支払い方法
      .user-input__container

        .user-input__container__sell-contents
          .user-input__container__sell-contents__form-group
            %label.label--small
              カード番号
              %span.hissu 必須
            .user-input__container__sell-contents__form-group__inputname
              = f.text_field :number, placeholder: "半角数字のみ" ,maxlength: "16", type: "text", class: "number user-input__container__sell-contents__form-group__inputname--input", id: "card_number"
              
              = image_tag 'PEPSized_Visa.png', class: 'credit-card-icon'
              = image_tag 'PEPSized_Mastercard.png', class: 'credit-card-icon'
              = image_tag 'PEPSized_JCB.png', class: 'credit-card-icon'
              = image_tag 'PEPSized_AmericanExpress02.png', class: 'credit-card-icon'
              = image_tag 'PEPSized_DinersClub02.png', class: 'credit-card-icon'
              = image_tag 'PEPSized_Discover.png', class: 'credit-card-icon'

        .user-input__birthday.steppagefixstep4padding
          %label.label--small
            有効期限
          %span.hissu 必須
          .inpout-box-six
            %select.exp_month{name: "exp_month", type: "text", style: "width: 100px; height: 50px;", id: "exp_month"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            %span 月
            %select.exp_year{name: "exp_year", type: "text", style: "width: 100px; height: 50px;", id: "exp_year"}
              %option{value: ""} --
              %option{value: "2019"}19
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
            %span 年

        .user-input__container__sell-contents
          .user-input__container__sell-contents__form-group
            %label.label--small
              セキュリティコード
              %span.hissu 必須
            .user-input__container__sell-contents__form-group__inputname
              = f.text_field :cvc, class: "cvc user-input__container__sell-contents__form-group__inputname--input", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
              -# %input.user-input__container__sell-contents__form-group__inputname--input{name: "name", type: "text", placeholder: " カード背面4桁もしくは3桁の番号"}

        .user-input__about-user-info.steppagefixstep4padding2
          = fa_icon 'question-circle', class: 'kiyaku--blue'
          = link_to 'カード裏面の番号とは？', '#', class: 'kiyaku--blue'

        #card_token
          = f.submit "次へ進む", class: "nextbotton", id: "token_submit"
          = link_to "後で登録", signup_index_path, method: :post, class:'nextbotton', style: "background-color: grey; border-color: grey;"
          -# .user-input__container__sell-btn.steppagefix.steppagefixstep3padding
          -#   = f.submit '次へ進む', class: 'nextbotton'

  = render 'devise/shared/devise-footer'

