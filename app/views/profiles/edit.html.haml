= render 'toppage/header'

.bread-crumbs
  .bread-crumbs__ii
    - breadcrumb :mypage
    = breadcrumbs  separator: " &rsaquo; "

= render 'layouts/flash'

.mypage-main
  = render 'users/mypage-side-menu'

  -# プロフィール画面
  = form_with(model: @user, url: profile_path, local: true) do |f|
    .mypage-main__right-contents
      .profile-contents
        .profile-contents__box.profile-title
          プロフィール
        .profile-contents__box.profile-bg
          .setting-profile
            .setting-profile__box
              %figure
                = image_tag '//static.mercdn.net/images/member_photo_noimage_thumb.png'
            .setting-profile__box
              = f.text_field :nickname, value: "#{@user.nickname}", class: "profile-box-size"
        .profile-contents__box
          = f.text_area :introduction, value: "#{@user.introduction}", class: "introduction-box", placeholder: "例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪"
        .profile-contents__box
          = f.submit "変更する", class: "profile-button"

= render 'toppage/toppage-footer'

= render 'toppage/exhibition-button'